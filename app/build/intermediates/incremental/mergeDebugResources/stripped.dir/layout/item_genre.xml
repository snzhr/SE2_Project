<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
        android:id="@+id/itemGenreName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingBottom="@dimen/mainPadding"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/mainPadding"
        android:text="Боевики"
        android:textAllCaps="true"
        android:textColor="@color/movieGenre"
        android:textSize="15sp"
        foo:customFont="@string/latoMedium" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/itemGenreList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbHorizontal="@drawable/scrollbar"
        android:scrollbars="horizontal" />

</LinearLayout>