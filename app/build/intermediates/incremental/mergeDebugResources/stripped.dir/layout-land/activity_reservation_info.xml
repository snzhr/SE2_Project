<?xml version="1.0" encoding="utf-8"?>
        

    

                 
                               
                                                                          

                 
                        
                                                                
           

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        android:theme="@style/OrderInfo" android:tag="layout-land/activity_reservation_info_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical" android:tag="binding_1">

            <include layout="@layout/toolbar"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:contentPadding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/tempUserInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        app:customFont="@string/latoLight"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@id/tempUserInfo"
                        app:customFont="@string/latoMedium"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tempUserInfo"
                        android:layout_marginTop="8dp"
                        android:text="@string/cash"
                        app:customFont="@string/latoLight"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/userCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/tempUserInfo"
                        app:customFont="@string/latoMedium"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/poster"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:scaleType="fitXY"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/tvReservationAmt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@id/poster"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:tag="binding_2"        
                        app:customFont="@string/latoMedium"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvReservationAmt"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@id/poster"
                        android:ellipsize="end"
                        android:maxHeight="70dp"
                        android:maxLines="3"
                        android:tag="binding_3"               
                        android:textSize="16sp"
                        app:customFont="@string/latoLight"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/aboutMovie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/poster"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/poster"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:tag="binding_4"                  
                        android:padding="6dp"
                        android:text="@string/more"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        app:customFont="@string/latoMedium"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPadding="8dp">

                <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                    android:id="@+id/tvSeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:customFont="@string/latoLight"/>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/background_confirm"
                android:tag="binding_5"                  
                android:text="@string/confirm"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>
         