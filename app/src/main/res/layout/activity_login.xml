<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="eventHandler"
            type="com.example.mirlan.oop_cinema.ActivitySignIn"/>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_centerInParent="true">

            <android.support.v7.widget.CardView
                android:id="@+id/cardSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:theme="@style/SignIn"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="22sp"
                        app:customFont="@string/latoMedium"/>

                    <com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:tilFont="@string/latoLight">

                        <com.example.mirlan.oop_cinema.helpers.EditTextCustom
                            android:id="@+id/etUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nextFocusDown="@+id/etPassword"
                            android:hint="@string/username"
                            android:inputType="textEmailAddress"
                            android:textSize="18sp"
                            app:etFont="@string/latoLight"/>

                    </com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom>

                    <com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:tilFont="@string/latoLight">

                        <com.example.mirlan.oop_cinema.helpers.EditTextCustom
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:textSize="18sp"
                            app:etFont="@string/latoLight"/>

                    </com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom>

                    <com.example.mirlan.oop_cinema.helpers.ButtonCustom
                        android:id="@+id/signIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="@{eventHandler.onClick}"
                        android:paddingLeft="48dp"
                        android:paddingRight="48dp"
                        android:text="@string/sign_in"
                        android:textColor="@color/colorAccent"
                        app:buttonFont="@string/latoRegular"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/forgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="@{eventHandler.onClick}"
                        android:padding="8dp"
                        android:text="@string/forgotPassword"
                        android:textColor="@color/signInTextHint"
                        android:textSize="15sp"
                        app:customFont="@string/latoLight"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/cardContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    android:padding="16dp"
                    android:theme="@style/SignUp">

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/temp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/registration"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp"
                        app:customFont="@string/latoMedium"/>

                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="@{eventHandler.onClick}"
                        app:srcCompat="@drawable/ic_close"/>

                    <com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom
                        android:id="@+id/temp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temp1"
                        android:layout_marginTop="10dp"
                        app:tilFont="@string/latoLight">

                        <com.example.mirlan.oop_cinema.helpers.EditTextCustom
                            android:id="@+id/etUsernameReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/username"
                            android:inputType="textEmailAddress"
                            android:nextFocusDown="@+id/etPasswordReg"
                            android:textColor="@color/colorPrimary"
                            app:etFont="@string/latoLight"/>

                    </com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom>

                    <com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom
                        android:id="@+id/temp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temp2"
                        android:layout_marginTop="10dp"
                        app:tilFont="@string/latoLight">

                        <com.example.mirlan.oop_cinema.helpers.EditTextCustom
                            android:id="@+id/etPasswordReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:nextFocusDown="@+id/etConfirmReg"
                            android:textColor="@color/colorPrimary"
                            app:etFont="@string/latoLight"/>

                    </com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom>

                    <com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom
                        android:id="@+id/temp4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temp3"
                        android:layout_marginTop="10dp"
                        app:tilFont="@string/latoLight">

                        <com.example.mirlan.oop_cinema.helpers.EditTextCustom
                            android:id="@+id/etConfirmReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hintConfirm"
                            android:inputType="textPassword"
                            android:textColor="@color/colorPrimary"
                            app:etFont="@string/latoLight"/>

                    </com.example.mirlan.oop_cinema.helpers.TextInputLayoutCustom>

                    <com.example.mirlan.oop_cinema.helpers.ButtonCustom
                        android:id="@+id/signUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temp4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="@{eventHandler.onClick}"
                        android:paddingLeft="48dp"
                        android:paddingRight="48dp"
                        android:text="@string/createAcc"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:buttonFont="@string/latoRegular"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:onClick="@{eventHandler.onClick}"
                android:src="@drawable/ic_add"
                app:elevation="4dp"
                app:fabSize="normal"
                app:layout_anchor="@+id/cardSignIn"
                app:layout_anchorGravity="right"/>

        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>