<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="eventHandler"
            type="com.example.mirlan.oop_cinema.ActivityReservationInfo"/>

        <variable
            name="movie"
            type="com.example.mirlan.oop_cinema.helpers.Movie"/>
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        android:orientation="vertical"
        android:theme="@style/OrderInfo">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:contentPadding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/tempUserInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        app:customFont="@string/latoLight"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@id/tempUserInfo"
                        app:customFont="@string/latoMedium"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tempUserInfo"
                        android:layout_marginTop="8dp"
                        android:text="@string/cash"
                        app:customFont="@string/latoLight"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/userCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/tempUserInfo"
                        app:customFont="@string/latoMedium"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/poster"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:scaleType="fitXY"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/tvReservationAmt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@id/poster"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:text="@{movie.getName}"
                        app:customFont="@string/latoMedium"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvReservationAmt"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@id/poster"
                        android:ellipsize="end"
                        android:maxHeight="70dp"
                        android:maxLines="3"
                        android:text="@{movie.getDescription}"
                        android:textSize="16sp"
                        app:customFont="@string/latoLight"/>

                    <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                        android:id="@+id/aboutMovie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/poster"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/poster"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:onClick="@{eventHandler.onClick}"
                        android:padding="6dp"
                        android:text="@string/more"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        app:customFont="@string/latoMedium"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPadding="8dp">

                <com.example.mirlan.oop_cinema.helpers.TextViewCustom
                    android:id="@+id/tvSeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:customFont="@string/latoLight"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/background_confirm"
            android:onClick="@{eventHandler.onClick}"
            android:text="@string/confirm"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
</layout>