<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>

    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="OrderInfo" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/movieName</item>
    </style>

    <style name="SignIn" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/signInText</item>
        <item name="android:textColorHint">@color/signInTextHint</item>
    </style>

    <style name="SignUp" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <!--<item state="android:colorControlHighlight">@color/colorAccent</item>-->
    </style>

</resources>
